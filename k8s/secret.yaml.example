# Copy this file to secret.yaml, fill in real values, then apply:
#   kubectl apply -f k8s/secret.yaml
#
# NEVER commit secret.yaml to version control.
apiVersion: v1
kind: Secret
metadata:
  name: ice-maker-secrets
  labels:
    app: ice-maker
type: Opaque
stringData:
  # Required -- ice-maker staging database
  ICEMAKER_DB_URL: "postgresql://user:pass@postgres-host:5432/icemaker"

  # Optional -- only needed for --sync-ice-time
  # SKATETRAX_DB_URL: "postgresql://user:pass@postgres-host:5432/skatetrax"
