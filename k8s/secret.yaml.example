# Copy this file to secret.yaml, fill in real values, then apply:
#   kubectl apply -f k8s/secret.yaml
#
# NEVER commit secret.yaml to version control.
apiVersion: v1
kind: Secret
metadata:
  name: ice-maker-secrets
  labels:
    app: ice-maker
    part-of: skatetrax
type: Opaque
stringData:
  # Required -- ice-maker staging database
  ICEMAKER_DB_URL: "postgresql://user:pass@postgres-host:25060/icemaker?sslmode=require"

  # Required for --push-to-skatetrax -- Skatetrax production database
  SKATETRAX_DB_URL: "postgresql://user:pass@postgres-host:25060/skatetrax_prod?sslmode=require"

  # Optional -- override the public rink API URL (defaults to https://api.skatetrax.com/api/v4/public/rinks)
  # SKATETRAX_API_URL: "https://api.skatetrax.com/api/v4/public/rinks"
